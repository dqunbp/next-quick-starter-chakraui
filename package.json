{
  "name": "next-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch\"  \"next dev\"",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --config .prettierrc 'src/**/*.{ts,tsx,js,jsx}' --write",
    "extract": "NODE_ENV=development lingui extract",
    "compile": "lingui compile",
    "watch": "npm-watch compile"
  },
  "watch": {
    "compile": {
      "patterns": [
        "src"
      ],
      "extensions": "po"
    }
  },
  "dependencies": {
    "@lingui/react": "^3.7.1",
    "cookie": "^0.4.1",
    "next": "10.0.8",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "use-cookie-state": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@lingui/cli": "^3.7.1",
    "@lingui/loader": "^3.7.1",
    "@lingui/macro": "^3.7.1",
    "@types/cookie": "^0.4.0",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "autoprefixer": "^10.2.5",
    "babel-plugin-macros": "^2.8.0",
    "concurrently": "^6.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-watch": "^0.7.0",
    "postcss": "^8.2.7",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
